/* pages/welcome/welcome.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  z-index: 1;
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.language-icon {
  width: 50rpx;
  height: 50rpx;
}

.enter-button-container {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.enter-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  background-color: #1999dc;
  color: white;
  font-size: 40rpx;
  line-height: 200rpx;
  border: none;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2);
}

.enter-button::after {
  border: none;
}
