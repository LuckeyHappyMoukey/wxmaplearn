/* 页面样式 */
.welcome-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
  
  /* 背景样式 */
  .background-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  
  .background-image {
    width: 100%;
    height: 100%;
  }
  
  .overlay-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40%;
    background: linear-gradient(to top, rgba(25, 85, 160, 0.9), transparent);
  }
  
  /* 校徽动画 */
  .logo-animation {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx 0;
  }
  
  .school-logo {
    width: 150rpx;
    height: 150rpx;
    opacity: 0;
  }
  
  .welcome-text {
        flex: 1;
        display:flex;
        align-items: left;
       padding: 100rpx 100rpx 2rpx 80rpx;
        color: rgb(202, 19, 89);
        font-size: xx-large;
  }
  
  /* 3D地图容器 */
  .map-container {
    margin: 50rpx;
    border-radius: 25rpx;
    overflow: hidden;
    position: relative;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  }
  
  .map-preview {
    width: 100%;
    height: 500rpx;
  }
  
  .map-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40rpx;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: white;
  }
  
  .map-title {
    font-size: 36rpx;
    font-weight: bold;
  }
  
  .map-description {
    font-size: 28rpx;
    margin-top: 10rpx;
  }
  
  .ar-button-container {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
  }
  
  /* 特色功能按钮 */
  .feature-buttons {
    display: flex;
    justify-content: space-around;
    margin: 30rpx;
  }
  
  .feature-button {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50rpx;
    padding: 15rpx 30rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  }
  
  .feature-button image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
  }
  
  .feature-button text {
    color: #1955a0;
    font-size: 28rpx;
  }
  
  /* 新生指南触发按钮 */
  .language-button {
    position: fixed;
    right: 40rpx;
    bottom: 100rpx;
    background: #1955a0;
    color: white;
    border-radius: 50rpx;
    padding: 15rpx 25rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
    z-index: 100;
  }
  
  .language-button image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
  }
  
  .language-button text {
    font-size: 26rpx;
  }
