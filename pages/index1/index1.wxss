/* pages/index/index.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #FFFFFF;
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  .header {
    padding: 24rpx 0;
    text-align: center;
    background-color: #ffffff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0,   0, 0.05);
  }
  
  .title {
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
  }
  
  .search-container {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 40rpx;
    padding: 16rpx 28rpx;
    margin: 20rpx 24rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .search-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
  }
  
  .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .map-container {
    flex: 1;
    position: relative;
    margin: 0 16rpx 20rpx;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    background-color: #eaeaea;
    width: 90%; /* 明确宽度 */
    height: 500rpx; /* 示例高度，可按需调整 */
  }
  
  .map-notice {
    position: absolute;
    bottom: 24rpx;
    left: 24rpx;
    right: 24rpx;
    text-align: center;
    color: #666;
    font-size: 24rpx;
    background-color: rgba(255, 255, 255, 0.85);
    padding: 12rpx;
    border-radius: 12rpx;
    z-index: 99; /* 示例值，可按需调整 */
  }
  
  .action-bar {
    display: flex;
    justify-content: space-around;
    padding: 20rpx;
    background-color: #fff;
    border-top: 1rpx solid #eee;
  }
  
  .action-bar button {
    flex: 1;
    margin: 0 16rpx;
    font-size: 28rpx;
    line-height: 1.6;
  }
  