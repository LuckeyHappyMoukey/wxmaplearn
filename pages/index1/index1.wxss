.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  .header {
    padding: 30rpx;
    text-align: center;
    background-color: #ffffff;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333333;
  }
  
  .map-container {
    flex: 10;
    position: relative;
    margin: 200rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  }
  
  .map-notice {
    position: absolute;
    bottom: 30rpx;
    left: 0;
    right: 0;
    text-align: center;
    color: #666;
    font-size: 28rpx;
  }
  
  .search-container {
    display: flex;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50rpx;
    padding: 20rpx 40rpx;
    margin: 20rpx;
  }
  
  .search-icon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
  }
  
  .search-input {
    flex: 1;
    font-size: 28rpx;
  }
  
