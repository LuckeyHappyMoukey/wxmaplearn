/* pages/language/language.wxss */
.language-page {
    /* 更改大背景颜色为淡蓝色 */
    background-color: #f0f8ff; 
    min-height: 100vh;
    width: 100%;
    padding-bottom: 40rpx;
}

/* 导航栏样式 */
.nav-bar {
  
    height: 150rpx; 
    width: 100%;
    /* 更改导航栏背景颜色为浅蓝色 */
    background-color:#C6DCF9;
    display: flex;
    align-items: center;
}

.back-btn {
    padding: 20rpx;
}

.back-icon {
    width: 40rpx;
    height: 40rpx;
}

.nav-title {
    font-size: 40rpx;
    color: #17171f;
    text-align: center;
    width: 100%;
    /* 恢复为默认字体 */
    font-family: system-ui, -apple-system, sans-serif; 
    /* 语言切换文字距离导航栏的距离 */
    margin-bottom: -80rpx;
}

/* 主标题样式 */
.main-title {
    margin-top: 60rpx;
    text-align: center;
}

.main-title text {
    font-size: 50rpx;
    color: #111111;
    font-weight: normal;
    font-family: system-ui, -apple-system, sans-serif;
}

/* 语言选项区域 */
.language-options {
    display: flex;
    flex-wrap: wrap;
    padding: 0 30rpx;
    margin-top: 60rpx;
    justify-content: space-between;
}

.language-option {
    width: 300rpx;
    height: 300rpx;
    margin: 20rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.option-circle {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 6rpx solid #D9D9D9;
}

.language-option.active .option-circle {
    border: 8rpx solid #007AFF;
    background-color: #E6F2FF;
}

.original-text {
    font-size: 40rpx;
    color: #111111;
    font-family: system-ui, -apple-system, sans-serif;
}

.translated-text {
    font-size: 32rpx;
    color: #666666;
    margin-top: 10rpx;
    font-family: system-ui, -apple-system, sans-serif;
}    